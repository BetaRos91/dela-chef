[Unit]
Description = Dela server
After = syslog.target network.target remote-fs.target

[Service]
User = <%= node['dela']['user'] %>

PIDFile = /tmp/dela.pid
ExecStart = <%= node['dela']['base_dir'] %>/bin/start.sh
ExecStop = <%= node['dela']['base_dir'] %>/bin/stop.sh
LimitNOFILE = 30000

Type = forking

[Install]
WantedBy = multi-user.target
